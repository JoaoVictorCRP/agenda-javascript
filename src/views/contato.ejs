<%- include('includes/head') -%>
<%- include('includes/navbar') -%>

    <div class="container">
        
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center">Contato</h1>
                <p class="text-center load"> Crie ou edite seus contatos: </p>

                <%- include('includes/messages') %>

                <% if(contato._id) { %> <!-- Se o contato existe... vamos editá-lo! -->
                    <form class='.form-contato' action="/contato/edit/<%=contato._id%>" method="post">
                <% }  else { %>
                    <form class='.form-contato' action="/contato/register" method="post"> <!-- Lembrando que o METHOD padrão de um form é GET! -->
                <% } %>

                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    <div class="form-group">

                      <label>Nome</label>
                      <input value="<%= contato.nome %>"  type="text" class="form-control" name="nome">
                    
                      <label>Sobrenome</label>
                      <input value="<%= contato.sobrenome %>"  type="text" class="form-control" name="sobrenome">

                      <label>Email</label>
                      <input value="<%= contato.email %>"  type="text" class="form-control" name="email">

                      <label>Telefone</label>
                      <input value="<%= contato.telefone %>"  type="tel" class="form-control" name="telefone">
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                  </form>

            </div>

            <div class="col-lg-2"></div>
        </div>    
    
    </div>

<%- include('includes/footer') -%>