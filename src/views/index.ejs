<%- include('includes/head') -%>
<%- include('includes/navbar') -%>

    <div class="container">
        
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center">Agenda</h1>
                <p class="text-center load"> Seus contatos: </p>

                <%- include('includes/messages') %>

                <% if(contatos.length > 0) { %>
                    <div class="responsive-table">
                        <table class="table">
                            <% contatos.forEach(contato => { %>
                            <tr>
                                <td> <%=  contato.nome %>  </td>
                                <td> <%=  contato.sobrenome %> </td>
                                <td> <%=  contato.telefone %> </td>
                                <td> <%=  contato.email %> </td>
                                <td> <a href="/contato/index/<%= contato._id %>">Editar</a> </td>
                                <td> <a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a> </td>
                            </tr>

                            <% }) %>
                    </table>
                </div>
                <% } else { %>

                    <h1 class="text-center text-danger"> Você ainda não registrou nenhum contato! </h1>

                <% }  %>
            </div>
            
            <div class="resp"

            <div class="col-lg-2"></div>
        </div>    
    
    </div>

<%- include('includes/footer') -%>